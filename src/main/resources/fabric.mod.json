{
  "schemaVersion": 1,
  "id": "colorstone",
  "version": "${version}",

  "name": "Colorstone",
  "description": "This mod allows resource packs to modify the colors of redstone in a text file.",
  "authors": [
    "FwuffyPetsOwO"
  ],
  "contact": {
    "sources": "https://github.com/FwuffyPetsOwO/Colorstone"
  },

  "license": "MIT",
  "icon": "assets/colorstone/icon.png",

  "environment": "client",
  "entrypoints": {
    "main": [
      "net.fwuffypetsowo.colorstone.ColorstoneMain"
    ]
  },
  "mixins": [
    "colorstone.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.12",
    "minecraft": "*",
    "java": ">=16"
  },
  "breaks": {
    "optifabric": "*"
  }
}
